# DISABLE_UNTRACKED_FILES_DIRTY="true"

# Which plugins would you like to load? (plugins can be found in ~/.oh-my-zsh/plugins/*)
# Custom plugins may be added to ~/.oh-my-zsh/custom/plugins/
# Example format: plugins=(rails git textmate ruby lighthouse)
plugins=(git)

source $ZSH/oh-my-zsh.sh

# BAIS - hist size
# export HISTFILESIZE=
# export HISTSIZE=

# BAIS - PATH extentions
export LD_LIBRARY_PATH="/home/bais/git/mlr/share/lib:$LD_LIBRARY_PATH"
# export PATH="/home/bais/.local/bin:$PATH"
export PATH="/home/bais/bin:$PATH"
export PATH="/home/bais/bin_extern:$PATH"
export PATH="/home/bais/git/mlr/share/bin:$PATH"
export PATH="/home/lib/bin:$PATH"
export PATH="/home/bais/git/mlr/tools/gdb-addons:$PATH"
export PATH="/home/bais/git/tmuxifier/bin:$PATH"
eval "$(tmuxifier init -)"
export PATH="/home/bais/anaconda2/bin:$PATH"  # added by Anaconda2 4.0.0 installer
export PKG_CONFIG_PATH="/usr/local/lib64/pkgconfig:$PKG_CONFIG_PATH"  # libfreenect

# BAIS - aliases
source ~/.bash_aliases

# BAIS - keyboard layout options
setxkbmap -option 'grp:shifts_toggle' 'it,de'

# BAIS - Completion for ..
zstyle ':completion:*' special-dirs true

# BAIS - vi key bindings
bindkey -v
# BAIS - fixes certain key bindings to adhere to vim
bindkey "^?" backward-delete-char
bindkey "^W" backward-kill-word
bindkey "^H" backward-delete-char
bindkey "^U" kill-line

export SVN_EDITOR="vim"
ulimit -c unlimited

# BAIS - update fpath for completion scripts
fpath=(~/bin/completion/ $fpath)
autoload -U compinit
compinit
zstyle ':completion:*' menu select=2
zstyle ":completion:*:descriptions" format "%B%d%b"

