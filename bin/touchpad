#!/usr/bin/zsh

usage_msg="Usage: touchpad [ on | off | toggle ]"
if [[ $# -gt 1 ]]
then
  echo $usage_msg
  return
fi

if [[ $# -eq 0 ]]
then
  1=toggle
fi

case $1 in
  on)
    tpo=0;
    ;;
  off)
    tpo=1;
    ;;
  toggle)
    let "tpo = 1 - $(synclient -l | fgrep TouchpadOff | sed 's/^.*= //')"
    ;;
  *)
    echo $usage_msg
    return
    ;;
esac

onoff=("on" "off")
echo "Turning touchpad $onoff[$tpo+1]."
synclient TouchpadOff=$tpo

