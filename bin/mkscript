#!/usr/bin/zsh

usage="Usage: mkscript <script> ..."
[ $# -eq 0 ] && echo $usage && (exit 1)

for script in "$@"
do
  [[ -e "$script" ]] && echo "File '$script' already exists. Skipping." && continue

  echo Creating $script.
  echo "#!/bin/bash
#!/usr/bin/zsh
#!/usr/bin/env python

" > $script

  chmod +x $script
done

vim $@
