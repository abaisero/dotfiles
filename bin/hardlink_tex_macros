#!/usr/bin/zsh

usage="Usage: hardlink_tex_macros <file>"
[ $# -ne 1 ] && echo $usage && exit 1

macros=$DOTFILES_DIR/latex/macros.tex
file=$1

[ ! -d "$DOTFILES_DIR" ] && echo "Dotfiles dir $DOTFILES_DIR does not exist." && exit 1
[ ! -f "$macros" ] && echo "Macro file '$macros' does not exist." && exit 1
[ -f "$file" ] && echo "File '$file' already exists. Not going to mess with it." && exit 1

ln $macros $file

exit 0
